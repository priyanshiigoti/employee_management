@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow rounded-4">
                <div class="card-body p-4">
                    <h2 class="card-title text-center mb-4">@ViewData["Title"]</h2>
                    <p class="text-center">Enter your email to receive password reset instructions.</p>

                    <form asp-action="ForgotPassword" method="post" novalidate>
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="form-floating mb-4">
                            <input asp-for="Email" class="form-control" placeholder="Email" />
                            <label asp-for="Email"></label>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg rounded-pill">Send</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
