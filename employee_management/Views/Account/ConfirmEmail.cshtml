@{
    ViewData["Title"] = "Email Confirmation";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow rounded-4">
                <div class="card-body p-4 text-center">
                    <h2 class="card-title mb-4">@ViewData["Title"]</h2>
                    <p class="lead">Your email has been confirmed successfully.</p>
                    <a asp-controller="Account" asp-action="Login" class="btn btn-success rounded-pill mt-3">Go to Login</a>
                </div>
            </div>
        </div>
    </div>
</div>
