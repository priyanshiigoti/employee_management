@{
}
@model List<employee_management.Models.Entities.Employee>

<h1>Employee List</h1>
<a class="btn btn-success ms-2" asp-controller="Employee" asp-action="Add">Create</a>

<table class="table">
    <thead>
        <tr>
            <th>FirstName</th>
            <th>LastName</th>
            <th>Email</th>
            <th>Phone</th>
            <th>IsActive</th>
            <th>Department</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var Employee in Model)
        {
            <tr>
                <td>@Employee.FirstName</td>
                <td>@Employee.LastName</td>
                <td>@Employee.Email</td>
                <td>@Employee.Phone</td>
                <td>@Employee.IsActive</td>
                <td>@Employee.department.Name</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Employee" asp-action="Edit" asp-route-id="@Employee.Id">Edit</a>

                    <form asp-controller="Employee" asp-action="Delete" asp-route-id="@Employee.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger ms-2">Delete</button>
                    </form>

                </td>


            </tr>
        }
    </tbody>
</table> 