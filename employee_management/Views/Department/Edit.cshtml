@model employee_management.Models.AddorEditDepartment

<h1>Edit Department Details</h1>

@if (Model == null)
{
    <p>No department found with this ID.</p>
}
else
{
    <form method="post">

        <div class="mt-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="Name" required/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>

    <form method="post" asp-action="Delete" asp-controller="Department"
          onsubmit="return confirm('Are you sure you want to delete this department?');"
          style="display:inline;">
        <input type="hidden" name="Id" value="@Model.Id" />
        <button type="submit" class="btn btn-danger mt-3 ms-2">Delete</button>
    </form>
}
