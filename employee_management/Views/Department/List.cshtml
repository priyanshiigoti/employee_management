@{
}
@model List<employee_management.Models.Entities.Department>

<h1>Department List</h1>
<a class="btn btn-success ms-2" asp-controller="Department" asp-action="Add">Create</a>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>CreatedAt</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var Department in Model)
        {
            <tr>
                <td>@Department.Name</td>
                <td>@Department.CreatedAt</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Department" asp-action="Edit" asp-route-id="@Department.Id">Edit</a>

                    <form asp-controller="Department" asp-action="Delete" asp-route-id="@Department.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger ms-2">Delete</button>
                    </form>

                </td>

                
            </tr>
        }
    </tbody>
</table> 