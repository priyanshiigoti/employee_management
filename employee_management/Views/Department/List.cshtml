@model IEnumerable<employee_management.Models.Entities.Department>

<h1>Departments</h1>
<a class="btn btn-success mb-3" asp-controller="Department" asp-action="Add">Add New Department</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var dept in Model)
        {
            <tr>
                <td>@dept.Name</td>
                <td>@dept.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                <td>
                    <a class="btn btn-sm btn-primary" href="@Url.Action("Edit", "Department", new { id = dept.Id })">Edit</a>

                    <form method="post" asp-action="Delete" asp-controller="Department"
                          onsubmit="return confirm('Are you sure you want to delete this department?');"
                          style="display:inline;">
                        <input type="hidden" name="Id" value="@dept.Id" />
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
